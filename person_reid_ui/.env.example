# Environment variables for Person ReID UI
# Copy this to .env and customize

# API Configuration
PERSON_REID_API_URL=http://localhost:8000
PERSON_REID_API_TIMEOUT=30
PERSON_REID_API_RETRY=3
PERSON_REID_API_RETRY_DELAY=1

# UI Configuration
PERSON_REID_UI_TITLE=Person ReID System
PERSON_REID_UI_ICON=ðŸ‘¤
PERSON_REID_UI_LAYOUT=wide
PERSON_REID_UI_PORT=8501
PERSON_REID_UI_THEME=light

# Feature Flags
PERSON_REID_AUTO_REFRESH=true
PERSON_REID_REFRESH_INTERVAL=5
PERSON_REID_ENABLE_CHARTS=true
PERSON_REID_ENABLE_EXPORT=true
PERSON_REID_DEBUG=false

# Display Settings
PERSON_REID_MAX_USERS=100
PERSON_REID_MAX_ZONES=100
PERSON_REID_MAX_MESSAGES=500
PERSON_REID_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Chart Settings
PERSON_REID_CHART_COLORS=plotly
PERSON_REID_CHART_HEIGHT=500
PERSON_REID_CHART_ANIMATION=true

# Alert Settings
PERSON_REID_SHOW_NOTIFICATIONS=true
PERSON_REID_SOUND=false
PERSON_REID_DESKTOP_NOTIFY=false
