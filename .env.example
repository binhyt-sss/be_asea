# ============================================
# PostgreSQL Database Configuration
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_database_name
POSTGRES_TABLE=user

# ============================================
# Message Consumer Configuration
# ============================================
# Choose consumer type: kafka, sse, websocket
# Change this value to switch between different message sources
CONSUMER_TYPE=kafka

# --------------------------------------------
# Kafka Messaging Configuration
# --------------------------------------------
# Enable/disable Kafka consumer
KAFKA_ENABLED=true
# Kafka broker address (format: host:port)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# Kafka topic to consume from
KAFKA_TOPIC=person_reid_alerts
# Consumer group ID for Kafka
KAFKA_GROUP_ID=person_reid_ui_consumers

# --------------------------------------------
# Server-Sent Events (SSE) Configuration
# --------------------------------------------
# Enable/disable SSE consumer
SSE_ENABLED=false
# SSE endpoint URL (must start with http:// or https://)
SSE_URL=http://localhost:8000/events/alerts
# HTTP headers for SSE connection (JSON format)
# Example: {"Authorization": "Bearer your_token"}
SSE_HEADERS={}
# Retry delay in seconds (1-300)
SSE_RETRY_DELAY=5
# Max retry attempts (-1 for unlimited)
SSE_MAX_RETRIES=-1

# --------------------------------------------
# WebSocket Consumer Configuration
# --------------------------------------------
# Enable/disable WebSocket consumer
WEBSOCKET_ENABLED=false
# WebSocket URL (must start with ws:// or wss://)
WEBSOCKET_URL=ws://localhost:8000/ws/alerts
# Reconnect delay in seconds (1-300)
WEBSOCKET_RECONNECT_DELAY=5
# Ping interval in seconds (5-120)
WEBSOCKET_PING_INTERVAL=20
# Ping timeout in seconds (5-60)
WEBSOCKET_PING_TIMEOUT=10

# ============================================
# API Server Configuration
# ============================================
API_HOST=http://localhost
API_PORT=8000
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING_LEVEL=INFO

# ============================================
# Environment
# ============================================
ENVIRONMENT=production

# ============================================
# UI Configuration
# ============================================
UI_TITLE=Person ReID System
UI_PAGE_ICON=ðŸ‘¤
UI_LAYOUT=wide
UI_PORT=8501
UI_THEME=light
UI_AUTO_REFRESH=true
UI_REFRESH_INTERVAL=5
UI_ENABLE_CHARTS=true
UI_ENABLE_EXPORT=true
UI_MAX_USERS_PER_PAGE=100
UI_MAX_ZONES_PER_PAGE=100
UI_MAX_MESSAGES=500
UI_DATE_FORMAT=%Y-%m-%d %H:%M:%S
UI_CHART_COLOR_SCHEME=plotly
UI_CHART_HEIGHT=500
UI_CHART_ANIMATION=true
UI_SHOW_NOTIFICATIONS=true
UI_SOUND_ENABLED=false
UI_DESKTOP_NOTIFICATIONS=false

# Debug Mode
DEBUG_MODE=false

# ============================================
# Business Logic Configuration
# ============================================
# Violation tracking threshold in seconds
# Default threshold if zone doesn't have custom config
DEFAULT_VIOLATION_THRESHOLD=10

# Tracking TTL in Redis (seconds)
# Should be greater than threshold to avoid premature cleanup
TRACKING_TTL=60

# Redis Configuration (for real-time violation tracking)
# Format: redis://[user:password@]host:port/database
REDIS_URL=redis://localhost:6379/0
